        <groupId>ga.epicpix</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>zProl-compiler</artifactId>
    <dependencies>
        <dependency>
            <groupId>ga.epicpix</groupId>
            <artifactId>zProl-utils</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
